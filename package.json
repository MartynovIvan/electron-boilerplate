{
  "name": "electron-boilerplate",
  "productName": "electron-boilerplate",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "dist/app.js",
  "scripts": {
    "build": "run-p build:*",
    "build:ts": "sleep 2 && tsc -p ./tsconfig.node.json",
    "build:stencil": "stencil build",
    "package": "run-s package:*",
    "package:app": "run-s build",
    "package:electron": "NODE_ENV=test electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "start": "run-p start:*",
    "start:electron": "sleep 3 && electron-forge start",
    "start:ts": "sleep 2 && tsc -w -p ./tsconfig.node.json",
    "start:stencil": "stencil build --dev --watch",
    "watch": "run-s start",
    "wdio": "NODE_ENV=test wdio run ./test/wdio.conf.ts"
  },
  "keywords": [],
  "author": {
    "name": "Christian Bromann",
    "email": "git@bromann.dev"
  },
  "license": "MIT",
  "dependencies": {
    "@stencil/core": "^4.4.1",
    "electron-squirrel-startup": "^1.0.0",
    "semver-regex": "^4.0.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "@wdio/cli": "^8.17.0",
    "@wdio/local-runner": "^8.17.0",
    "@wdio/mocha-framework": "^8.17.0",
    "@wdio/spec-reporter": "^8.17.0",
    "electron": "27.0.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wdio-electron-service": "file:../wdio-electron-service"
  }
}
