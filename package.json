{
  "name": "electron-boilerplate2",
  "productName": "electron-boilerplate2",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "dist/app.js",
  "scripts": {
    "build": "run-p build:*",
    "build:ts": "tsc -p ./tsconfig.node.json",
    "build:stencil": "stencil build",
    "package": "run-s package:*",
    "package:app": "run-s build",
    "package:electron": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "start": "run-s build && run-p start:*",
    "start:electron": "sleep 2 && electron-forge start",
    "start:ts": "tsc -w -p ./tsconfig.node.json",
    "start:stencil": "stencil build --dev --watch",
    "watch": "run-s start"
  },
  "keywords": [],
  "author": {
    "name": "Christian Bromann",
    "email": "git@bromann.dev"
  },
  "license": "MIT",
  "dependencies": {
    "@stencil/core": "^4.4.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "electron": "26.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2"
  }
}
